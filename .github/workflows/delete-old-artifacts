# expire-in
# formats 10 minutes, 1hr 20mins, 7days, 1week

name: 'Delete old artifacts'
on:
  schedule:
    - cron: 0 18 * * *

jobs:  
  delete-artifacts:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v1
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          expire-in: 0 # Setting this to 0 will delete all artifacts
