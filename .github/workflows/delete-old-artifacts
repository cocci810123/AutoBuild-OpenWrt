name: 'Delete old artifacts'

on:
  workflow_dispatch:
  schedule:
    - cron: 0 18 * * *

jobs:
  check:
    runs-on: ubuntu-latest
    
    steps:
      
    - name: Delete old artifacts
      uses: kolpav/purge-artifacts-action@v1
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        expire-in: 0days # Setting this to 0 will delete all artifacts

